@model List<Blog.Core.Models.Category>

<div class="sidebar">
    <h3>Категории</h3>

    @if (Model.Count > 0)
    {
        <ul>
            @foreach (var category in Model)
            {
                <li>@Html.CategoryLink(category)</li>
            }
        </ul>
    }
    else
    {
        <p>Категории не найдены!</p>
    }
</div>