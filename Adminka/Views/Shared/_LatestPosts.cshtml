@model List<Blog.Core.Models.Post>

<div class="sidebar">
    <h3>Последние записи</h3>

    @if (Model.Count > 0)
    {
        <ul>
            @foreach (var post in Model)
            {
                <li>@Html.PostLink(post)</li>
            }
        </ul>
    }
    else
    {
        <p>Не найдено записей!</p>
    }
</div>
